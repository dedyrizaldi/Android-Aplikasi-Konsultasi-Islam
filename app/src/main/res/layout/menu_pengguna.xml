<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4e1c4"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Menu Pengguna"
        android:textColor="#000000"
        android:textSize="35dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/images"
        android:layout_centerInParent="true" />


    <ImageView
        android:id="@+id/btnProfil"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/ic_profil" />

    <ImageView
        android:id="@+id/btnUstad"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/ic_ustad" />

    <ImageView
        android:id="@+id/btnSearch"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/btnProfil"
        android:layout_alignTop="@+id/btnPertanyaan"
        app:srcCompat="@drawable/ic_search" />

    <ImageView
        android:id="@+id/btnPertanyaan"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnUstad"
        android:layout_marginBottom="176dp"
        app:srcCompat="@drawable/ic_pertanyaan" />

    <ImageView
        android:id="@+id/btnDraft"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSearch"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/ic_draft" />

    <ImageView
        android:id="@+id/btnhistori"
        android:layout_width="126dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/btnUstad"
        android:layout_alignTop="@+id/btnDraft"
        app:srcCompat="@drawable/ic_histori" />

</RelativeLayout>